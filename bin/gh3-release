#!/usr/bin/env node

var fs = require('fs');
var path = require('path');
var log = require('verbalize');
var argv = require('minimist')(process.argv.slice(2));
var config = require('config');

log.info('Config', config);


/**
 * Everything in the file should be customized
 */


// Verbalize `runner`
log.runner = 'gh3releaseio';

/**
* Taking arguments
*/

// Use `-t` or `--task` to specify the text to append
var task = argv._[1] || argv.t || argv.task;


if (!task) {
  log.error('No tasks will specified');
}
else {
  log.info('Your task is ', task);
}


/**
 * Application
 */
